<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.bitcoupon.bitcoupon" >

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.CompanyActivity"
            android:label="@string/title_activity_company" >
        </activity>
        <activity
            android:name=".controllers.CouponActivity"
            android:label="@string/title_activity_coupon" >
        </activity>
        <activity
            android:name=".controllers.SingleBoughtCoupon"
            android:label="@string/title_activity_single_bought_coupon" >
        </activity>
        <activity
            android:name=".controllers.SingleCompanyActivity"
            android:label="@string/title_activity_single_company" >
        </activity>
        <activity
            android:name=".controllers.SingleCouponActivity"
            android:label="@string/title_activity_single_coupon" >
        </activity>
        <activity
            android:name=".controllers.UserCouponsActivity"
            android:label="@string/title_activity_user_coupons" >
        </activity>
        <activity
            android:name=".controllers.UserProfileActivity"
            android:label="@string/title_activity_user_profile" >
        </activity>
    </application>

</manifest>
